# ========== LLM PROVIDERS ==========
GOOGLE_AI_API_KEY=your_gemini_api_key
GROQ_API_KEY=your_groq_api_key

# ========== JOB SEARCH ==========
SERPAPI_API_KEY=your_serpapi_key
RAPIDAPI_KEY=your_rapidapi_key

# ========== HR CONTACT ==========
# Jobs are now pre-filtered: only jobs with a verified HR email are shown/processed.
# Add at least one of these keys to maximise HR email success rate.
APIFY_API_KEY=your_apify_key           # https://apify.com — LinkedIn people search + contact scraper (free tier available)
PROSPEO_API_KEY=your_prospeo_key       # https://prospeo.io — 150 free domain searches/month
HUNTER_API_KEY=your_hunter_key         # https://hunter.io — 25 free domain searches/month (very reliable)
SNOV_CLIENT_ID=your_snov_client_id     # https://snov.io — 50 free searches/month
SNOV_CLIENT_SECRET=your_snov_secret    # https://snov.io

# ========== GOOGLE CLOUD ==========
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_OAUTH_CLIENT_ID=your_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_client_secret
GOOGLE_CREDENTIALS_PATH=./credentials.json

# ========== SUPABASE ==========
SUPABASE_URL=https://<project-ref>.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
